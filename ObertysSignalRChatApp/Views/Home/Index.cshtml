

<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
<div class="container mb-5">
    <div class="row clearfix">
        <div class="col-lg-12">
            <div class="card chat-app">
                <div class="chat">
                    <div class="chat-header clearfix bg-info">
                        <div class="row">
                            <div class="col-lg-6">
                                <a href="javascript:void(0);" data-toggle="modal" data-target="#view_info">
                                    <img src="https://bootdey.com/img/Content/avatar/avatar2.png" alt="avatar">
                                </a>
                                <div class="chat-about">
                                    <small>Last seen: 2 hours ago</small>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="chat-history">
                        <ul class="m-b-0" id="message-list">
                            <li class="clearfix">
                                <div class="message-data text-right">
                                    <span class="message-data-time"></span>
                                    <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="avatar">
                                    <div id="other-username"></div>
                                </div>
                                <div class="message other-message float-right"></div>
                            </li>
                        </ul>
                    </div>
                    <div class="chat-message clearfix">
                        @* <input type="text" id="username" class="form-control" placeholder="Enter your username here..."> <br /> *@
                        <div class="input-group mb-0">
                            <input type="text" id="message" class="form-control" placeholder="Enter text message here...">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i id="sendMessagebtn"  class="p-4 fa fa-send"></i></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>